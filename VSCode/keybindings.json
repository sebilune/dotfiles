// ~/.config/Code/User/keybindings.json

[
  // NAVIGATION
  {
    "key": "ctrl+j", /* Toggle terminal window */
    "command": "workbench.action.togglePanel"
  },
  {
    "key": "ctrl+l", /* Focus next terminal instance */
    "command": "workbench.action.terminal.focusNext",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+h", /* Focus previous terminal instance */
    "command": "workbench.action.terminal.focusPrevious",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+n", /* Create a new terminal instance */ 
    "command": "workbench.action.terminal.new",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+w",/* Close current terminal instance */ 
    "command": "workbench.action.terminal.kill",
    "when": "terminalFocus"
  },

  // FILE TREE
  {
    "key": "ctrl+e", /* Toggle file tree */
    "command": "workbench.action.toggleSidebarVisibility"
  },
  {
    "key": "ctrl+e", /* Toggle file tree */
    "command": "workbench.files.action.focusFilesExplorer",
    "when": "editorTextFocus"
  },
  {
    "key": "n", /* Create new file in tree */ 
    "command": "explorer.newFile",
    "when": "filesExplorerFocus && !inputFocus"
  },
  {
    "key": "r", /* Rename a file or folder in tree */ 
    "command": "renameFile",
    "when": "filesExplorerFocus && !inputFocus"
  },
  {
    "key": "shift+n", /* Create a new folder in tree */
    "command": "explorer.newFolder",
    "when": "explorerViewletFocus"
  },
  {
    "key": "d", /* Delete a file or folder in tree */
    "command": "deleteFile",
    "when": "filesExplorerFocus && !inputFocus"
  },

  // EXTRA
  {
    "key": "ctrl+shift+e",
    "command": "workbench.action.focusActivityBar"
  },
  {
    "key": "ctrl+shift+5",
    "command": "editor.emmet.action.matchTag"
  },
  {
    "key": "ctrl+z",
    "command": "workbench.action.toggleZenMode"
  },

  // REMOVED KEYBINDINGS
  {
    "key": "ctrl+shift+e",
    "command": "-workbench.action.quickOpenNavigatePreviousInFilePicker",
    "when": "inFilesPicker && inQuickOpen"
  },
  {
    "key": "ctrl+shift+n",
    "command": "-workbench.action.newWindow"
  }
]
