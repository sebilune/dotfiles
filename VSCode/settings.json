// ~/.config/Code/User/settings.json

{
  // General
  "files.autoSave": "afterDelay",
  "editor.inlineSuggest.enabled": true,
  "editor.mouseWheelZoom": true,
  "editor.minimap.enabled": false,
  "breadcrumbs.enabled": false,
  "workbench.editor.empty.hint": "hidden",
  "explorer.confirmDragAndDrop": false,
  "settingsSync.ignoredExtensions": ["unthrottled.doki-theme"],

  // Git
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false,
    "javascript": true,
    "scss": false,
    "html": true
  },

  //Formatting
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.lineNumbers": "relative",
  "editor.fontSize": 16,
  "editor.fontLigatures": true,
  "editor.fontFamily": "Cascadia Code",
  "editor.fontVariations": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "terminal.integrated.fontSize": 16,
  "editor.formatOnSave": false,
  "terminal.integrated.fontFamily": "Cascadia Code",

  // Compiling
  "liveSassCompile.settings.formats": [
    {
      "format": "compressed",
      "extensionName": ".css",
      "savePath": "/dist",
      "savePathReplacementPairs": null
    }
  ],

  // VSCord
  "vscord.app.privacyMode.enable": true,
  "vscord.app.name": "Visual Studio Code",
  "vscord.behaviour.suppressNotifications": true,

  // Terminal Colors
  "workbench.colorCustomizations": {
    "terminal.foreground": "#DCDFE4",
    "terminalCursor.background": "#FFFFFF",
    "terminalCursor.foreground": "#FFFFFF",
    "terminal.ansiBlack": "#282C34",
    "terminal.ansiBlue": "#1CD9FF",
    "terminal.ansiBrightBlack": "#5A6374",
    "terminal.ansiBrightBlue": "#1CD9FF",
    "terminal.ansiBrightCyan": "#1CD9FF",
    "terminal.ansiBrightGreen": "#4DFF69",
    "terminal.ansiBrightMagenta": "#FC97FF",
    "terminal.ansiBrightRed": "#FF3B55",
    "terminal.ansiBrightWhite": "#DCDFE4",
    "terminal.ansiBrightYellow": "#FFF55A",
    "terminal.ansiCyan": "#1CD9FF",
    "terminal.ansiGreen": "#4DFF69",
    "terminal.ansiMagenta": "#FC97FF",
    "terminal.ansiRed": "#FF3B55",
    "terminal.ansiWhite": "#DCDFE4",
    "terminal.ansiYellow": "#FFF55A"
  },

  // Vim
  "vim.leader": "<Space>",
  "vim.hlsearch": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    // NAVIGATION
    // switch b/w buffers
    { "before": ["<S-h>"], "commands": [":bprevious"] },
    { "before": ["<S-l>"], "commands": [":bnext"] },

    // splits
    { "before": ["leader", "v"], "commands": [":vsplit"] },
    { "before": ["leader", "s"], "commands": [":split"] },

    // panes
    {
      "before": ["leader", "h"],
      "commands": ["workbench.action.focusLeftGroup"]
    },
    {
      "before": ["leader", "j"],
      "commands": ["workbench.action.focusBelowGroup"]
    },
    {
      "before": ["leader", "k"],
      "commands": ["workbench.action.focusAboveGroup"]
    },
    {
      "before": ["leader", "l"],
      "commands": ["workbench.action.focusRightGroup"]
    },
    // NICE TO HAVE
    { "before": ["leader", "w"], "commands": [":w!"] },
    { "before": ["leader", "q"], "commands": [":q!"] },
    { "before": ["leader", "x"], "commands": [":x!"] },
    {
      "before": ["[", "d"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["]", "d"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["<leader>", "c", "a"],
      "commands": ["editor.action.quickFix"]
    },
    { "before": ["leader", "f"], "commands": ["workbench.action.quickOpen"] },
    { "before": ["leader", "p"], "commands": ["editor.action.formatDocument"] },
    {
      "before": ["g", "h"],
      "commands": ["editor.action.showDefinitionPreviewHover"]
    }
  ],
  "vim.visualModeKeyBindings": [
    // Stay in visual mode while indenting
    { "before": ["<"], "commands": ["editor.action.outdentLines"] },
    { "before": [">"], "commands": ["editor.action.indentLines"] },
    // Move selected lines while staying in visual mode
    { "before": ["J"], "commands": ["editor.action.moveLinesDownAction"] },
    { "before": ["K"], "commands": ["editor.action.moveLinesUpAction"] },
    // toggle comment selection
    { "before": ["leader", "c"], "commands": ["editor.action.commentLine"] }
  ],

  // Notifications
  "liveServer.settings.donotShowInfoMsg": true,

  // Doki Settings
  "doki.sticker.path": "/home/sebi/Pictures/Icons/Mew-1.gif",
  "doki.sticker.css": "z-index: 100; background-position: 98% 95.75%; opacity: 0.75;" /* First % is X alignment, second is Y alignment. */,
  "doki.background.anchor": "center",
  "doki.statusbar.name": "Sofia",

  // Remove Ubuntu default window bar
  "window.titleBarStyle": "custom",

  // Styling
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Simple Dark"
}
